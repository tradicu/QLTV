@model DATN_LiBrary.Models.Theloai
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <h1>Xác nhận xóa</h1>

    <div>
        <h4>Bạn có chắc chắn muốn xóa thể loại này không?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Mã Thể Loại:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Matheloai)
            </dd>
            <dt class="col-sm-2">
                Tên Thể Loại:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tentheloai)
            </dd>
        </dl>
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Matheloai" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Matheloai" />
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>


