@model NhaXuatBan
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thêm nhà xuất bản</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <form asp-action="Create" method="post">
                    <div id="commonFields">
                        <div class="form-group">
                            <label asp-for="Mnxb" class="control-label">Mã nhà xuất bản</label>
                            <input asp-for="Mnxb" class="form-control" value="@ViewBag.NextMaNhaXuatBan" readonly />
                            <span asp-validation-for="Mnxb" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tnxb" class="control-label">Tên nhà xuất bản</label>
                            <input asp-for="Tnxb" class="form-control" />
                            <span asp-validation-for="Tnxb" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
</div>

