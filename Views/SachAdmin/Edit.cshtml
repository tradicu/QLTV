@model DATN_LiBrary.Models.Sach
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Sửa sách</h6>
            <a href="@Url.Action("Create", "SachAdmin")" class="btn btn-primary">Thêm mới</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-lg-2">
                        <!-- Ảnh -->
                        <img src="link_to_image" alt="Ảnh" style="width: 100%;">
                    </div>
                    <div class="col-lg-10">
                        <div class="column">
                            <form method="post" asp-controller="SachAdmin" asp-action="Edit">
                                <div class="row custom-border-bottom">
                                    <label>Mã sách</label>
                                    <input type="text" id="Masach" name="Masach" class="form-control mt-2 mb-4 ps-3" value="@Model.Masach" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Nhan đề</label>
                                    <input type="text" id="Nhande" name="Nhande" class="form-control mt-2 mb-4 ps-3" value="@Model.Nhande" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Tác giả</label>
                                    <div class="col-lg-9">
                                        @foreach (var tacgia in Model.Mtgs)
                                        {
                                            <input type="text" class="form-control mt-2 mb-4 ps-3" value="@tacgia.Ttg" readonly>
                                            <input type="hidden" name="Tacgia" value="@tacgia.Ttg">
                                        }
                                    </div>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Thể loại</label>
                                    @foreach (var theloai in Model.Matheloais)
                                    {
                                        <input type="text" class="form-control mt-2 mb-4 ps-3" value="@theloai.Tentheloai" readonly>
                                        <input type="hidden" name="Theloai" value="@theloai.Tentheloai">
                                    }
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Năm xuất bản</label>
                                    <input type="text" id="Namxuatban" name="Namxuatban" class="form-control mt-2 mb-4 ps-3" value="@Model.Namxuatban" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Số trang</label>
                                    <input type="text" id="Sotrang" name="Sotrang" class="form-control mt-2 mb-4 ps-3" value="@Model.Sotrang"readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Số lượng</label>
                                    <input type="text" id="Soluong" name="Soluong" class="form-control mt-2 mb-4 ps-3" value="@Model.Soluong" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Nhà xuất bản</label>
                                    <input type="text" class="form-control mt-2 mb-4 ps-3" value="@Model.MnxbNavigation?.Tnxb" readonly>
                                    <input type="hidden" name="Nhaxuatban" value="@Model.MnxbNavigation?.Tnxb">
                                </div>
                                <div class="form-group">
                                    <label for="MoTa">Mô tả sách:</label>
                                    <textarea class="form-control" id="MoTa" name="MoTa" rows="4">@Model.Mota</textarea>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-12 text-end">
                                        <button type="submit" class="btn btn-primary" value="Create">Lưu</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

