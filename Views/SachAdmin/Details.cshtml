@model IEnumerable<Sach>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Phiếu mượn online</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-lg-2">
                            <!-- Ảnh -->
                            <img src="link_to_image" alt="Ảnh" style="width: 100%;">
                        </div>
                        <div class="col-lg-10">
                            <div class="column">
                                <div class="row custom-border-bottom">
                                    <label>Mã sách</label>
                                    <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.Masach" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <label>Nhan đề</label>
                                    <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.Nhande" readonly>
                                </div>
                                <div class="row custom-border-bottom">
                                    <div class="col-lg-3">
                                        <label>Tác giả</label>
                                    </div>
                                    <div class="col-lg-9">
                                        @foreach (var tacgia in item.Mtgs)
                                        {
                                            <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@tacgia.Ttg" readonly>
                                        }
                                    </div>
                                </div>
                                <div class="row custom-border-bottom">
                                    <div class="col-lg-3 ">
                                        <label>Thể loại</label>
                                    </div>
                                    <div class="col-lg-9">
                                        @foreach (var theloai in item.Matheloais)
                                        {
                                            <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@theloai.Tentheloai" readonly>
                                        }
                                    </div>                              
                                </div>
                                <div class="row custom-border-bottom">
                                    <div class="col-lg-3 ">
                                        <label>Năm sản xuất</label>
                                    </div>
                                        <div class="col-lg-9">
                                            <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.Namxuatban" readonly>
                                        </div>                              
                                </div>
                                <div class="row custom-border-bottom">
                                     <div class="col-lg-3">
                                         <label>Số trang</label>
                                    </div>
                                    <div class="col-lg-9">
                                         <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.Sotrang" readonly>
                                    </div>                              
                                </div>
                                <div class="row custom-border-bottom">
                                    <div class="col-lg-3">
                                         <label>Số lượng</label>
                                    </div>
                                    <div class="col-lg-9">
                                             <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.Soluong" readonly>
                                    </div>                              
                                </div>
                                <div class="row custom-border-bottom">
                                    <div class="col-lg-3">
                                        <label>Nhà sản xuất</label>
                                    </div>
                                    <div class="col-lg-9">                                    
                                            <input type="text" id="lname" class="form-control mt-2 mb-4 ps-3" value="@item.MnxbNavigation?.Tnxb" readonly>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label for="MoTa">Mô tả sách:</label>
                                    <textarea class="form-control" id="MoTa" name="MoTa" rows="4">@item.Mota</textarea>
                                </div>
                                <div class="row mt-2">
                                    <a asp-controller="SachAdmin" asp-action="Edit" asp-route-id="@item.Masach" class="btn btn-primary">
                                        Sửa
                                    </a>
                                </div>
                             </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
