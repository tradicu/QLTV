@model TacGium
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thêm tác giả</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <form  asp-action="Create" method="post">
                    <div id="commonFields">
                        <div class="form-group">
                            <label asp-for="Mtg" class="control-label">Mã Tác Giả</label>
                            <input asp-for="Mtg" class="form-control" value="@ViewBag.NextMaTacGia" readonly />
                            <span asp-validation-for="Mtg" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ttg" class="control-label">Tên Tác Giả</label>
                            <input asp-for="Ttg" class="form-control" />
                            <span asp-validation-for="Ttg" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
</div>


